# include<stdio.h> 
 #include<conio.h> 
 #include<math.h> 
 void main() 
 { 
      int a,b,c; 
      float area, s; 
      clrscr(); 
      printf("Enter the Three Sides of Triangle : "); 
      scanf("%d %d %d" ,&a, &b, &c); 
      s=(a+b+c)/2.0; 
      area=sqrt(s*(s-a)*(s-b)*(s-c)); 
      printf("Area of the Triangle= %f ", area); 
      getch(); 
 }  
